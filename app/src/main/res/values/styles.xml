<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ToolbarApp.Back">
        <item name="titleCentered">true</item>
        <item name="navigationIcon">@drawable/arrow_back</item>
    </style>

    <style name="TaskImageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/dashed_border</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTitle.Input">
        <!--    Same as TextTitle    -->
    </style>

    <style name="TextTitle.Output">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitle.Body">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="TextInputForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputForm.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="ButtonApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/blue</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="ButtonApp.Outline">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ScrollButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ScrollButton.Active">
        <item name="backgroundTint">@color/blue</item>
        <item name="strokeColor">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ScrollButton.Inactive">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/transparent</item>
        <item name="itemRippleColor">@color/transparent</item>
    </style>

    <style name="ProgressBarApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:max">100</item>
        <item name="android:progress">50</item>
    </style>
</resources>