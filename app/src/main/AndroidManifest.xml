<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_app"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.FocusList"
        tools:targetApi="31">
        <activity
            android:name=".ui.tasks.EditTaskActivity"
            android:exported="false" />
        <activity
            android:name=".ui.tasks.CreateTaskActivity"
            android:exported="false" />
        <activity
            android:name=".ui.tasks.DetailTaskActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.CalenderActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.DraftTaskActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.ReadTaskActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.DeleteProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.CreateUpdateTaskActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.AuthActivity"
            android:exported="true"
            android:theme="@style/Theme.FocusList.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>